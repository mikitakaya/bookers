<body>
 <p id="notice"></p>

 <h1>Books</h1>

 <table>
  <!-- テーブルのヘッダー -->
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>

  <!-- テーブルの本体部分 -->
  <tbody>
   <tr>
    <!--投稿データを全て順番に表示する-->
    <% @books.each do |book| %>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
    <% end %>
   </tr>
  </tbody>
 </table>

 <!-- 新規登録機能の作成 -->
 <h2>New book</h2>

 <!-- エラーメッセージ -->
 <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>

  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>

 <!-- form_with部分 -->
 <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <!-- タイトル -->
  <div class="field">
   <lavel for="book_title">Title</lavel>
   <%= f.text_field :title %>
  </div>

  <!-- 本文 -->
  <div class="field">
   <lavel for="book_body">Body</lavel>
   <%= f.text_area :body %>
  </div>

  <!-- 投稿 -->
  <div class="actions">
   <%= f.submit 'Create Book' %>
  </div>
 <% end %>
</body>